[colors]
void = #ee000000
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/example]
width = 100%
height = 27
fixed-center = false

background = ${colors.void}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

; border-size = 4
border-color = ${colors.void}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = fixed:pixelsize=14;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;1
font-2 = siji:pixelsize=14;1
font-3 = Noto Sans CJK JP:size=10:antialias=true;0	

modules-left = bspwm xwindow
modules-center =
modules-right = volume cpu memory battery wlan date xkeyboard  powermenu

tray-position = center
tray-padding = 2
tray-background = ${colors.void} 

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
